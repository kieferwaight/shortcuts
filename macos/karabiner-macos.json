{
  "title": "Universal macOS-like bindings",
  "rules": [
    {
      "description": "Caps Lock to Control",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "caps_lock" },
          "to": [{ "key_code": "left_control" }]
        }
      ]
    },
    {
      "description": "Ctrl+h to Backspace",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": { "mandatory": ["control"] }
          },
          "to": [{ "key_code": "delete_or_backspace" }]
        }
      ]
    },
    {
      "description": "Ctrl+j to Down Arrow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": { "mandatory": ["control"] }
          },
          "to": [{ "key_code": "down_arrow" }]
        }
      ]
    },
    {
      "description": "Ctrl+k to Up Arrow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": { "mandatory": ["control"] }
          },
          "to": [{ "key_code": "up_arrow" }]
        }
      ]
    },
    {
      "description": "Ctrl+l to Right Arrow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": { "mandatory": ["control"] }
          },
          "to": [{ "key_code": "right_arrow" }]
        }
      ]
    },
    {
      "description": "Ctrl+H (uppercase) to Left Arrow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": { "mandatory": ["control", "shift"] }
          },
          "to": [{ "key_code": "left_arrow" }]
        }
      ]
    },
    {
      "description": "Ctrl+J (uppercase) to Down Arrow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": { "mandatory": ["control", "shift"] }
          },
          "to": [{ "key_code": "down_arrow" }]
        }
      ]
    },
    {
      "description": "Ctrl+K (uppercase) to Up Arrow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": { "mandatory": ["control", "shift"] }
          },
          "to": [{ "key_code": "up_arrow" }]
        }
      ]
    },
    {
      "description": "Ctrl+L (uppercase) to Right Arrow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": { "mandatory": ["control", "shift"] }
          },
          "to": [{ "key_code": "right_arrow" }]
        }
      ]
    },
    {
      "description": "Ctrl+a to Home",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": { "mandatory": ["control"] }
          },
          "to": [{ "key_code": "home" }]
        }
      ]
    },
    {
      "description": "Ctrl+e to End",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "e",
            "modifiers": { "mandatory": ["control"] }
          },
          "to": [{ "key_code": "end" }]
        }
      ]
    }
  ]
}
